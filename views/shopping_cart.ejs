<body>
  <div class="container">
    <%- include("components/nav", {cpage:cpage, loginname:loginname}) %>
    <main class="main">
     
      <div class="rtl mainPage">
        
          HELLO <%= loginname %> <br><br>
          <table class="orderedTable">
          <tr>
            <th>מוצר</th>
            <th>הזמנה</th>
            <th>צבע</th>
            <th>כמות</th>
            <th>מחיר</th>
            <th>עלות</th>
            <th>מחק</th>
          </tr>
          <% for(let item of data1) { %>
            
            <tr>
              <td><%= item.product_name %></td>
              <td><%= item.order_id %></td>
              <td><%= item.color %></td>
              <td><%= item.amount_ordered %></td>
              <td><%= new Intl.NumberFormat('de-DE').format(item.price) %></td>
              <td><%= new Intl.NumberFormat('de-DE').format(item.sumValue) %></td>
              <td id="e<%=item.order_id%>"><button   onclick="handleDeleteClick(event)"><img style="height: 4vh;cursor: pointer;"  src="/images/eraser.jpg" /></button></td>
            </tr>
            
      <% } %>
    </table>
    </div>
    <br><br>
    <br>
    <br>
    <div>
      <div id="totalCharge">
        <span>סה"כ לחיוב:</span>
        <span>
            <%= new Intl.NumberFormat('de-DE').format(total) %>
        </span>
      </div>
    </div>
    </main>
    <footer></footer>
